{
	"name": "weft",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"dev:wrangler": "wrangler dev",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "npm run build && vite preview",
		"deploy": "npm run build && wrangler deploy",
		"deploy:prod": "CLOUDFLARE_ENV=production npm run build && wrangler deploy --env production",
		"cf-typegen": "wrangler types",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:integration": "vitest run --config vitest.config.workers.ts"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.71.2",
		"@cloudflare/sandbox": "^0.6.7",
		"jose": "^6.1.3",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router-dom": "^7.11.0",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.13",
		"@cloudflare/vitest-pool-workers": "^0.11.1",
		"@eslint/js": "^9.33.0",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"@vitest/coverage-v8": "3.2",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^17.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vitest": "3.2",
		"wrangler": "^4.54.0"
	}
}
